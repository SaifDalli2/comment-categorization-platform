{
  "name": "comment-categorization-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Comment Categorization Microservices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:load": "k6 run tests/load/k6-config.js",
    "test:load:stress": "k6 run tests/load/k6-config.js --config '{\"options\": stressOptions}'",
    "test:load:spike": "k6 run tests/load/k6-config.js --config '{\"options\": spikeOptions}'",
    "test:health": "node tests/health/health-check.js",
    "test:smoke": "jest --testPathPattern=tests/smoke",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "validate": "npm run lint && npm run test:unit",
    "health-check": "node healthcheck.js",
    "docker:build": "docker build -t gateway-service .",
    "docker:test": "docker run --rm -e NODE_ENV=test gateway-service npm test",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level high",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "clean": "rm -rf node_modules coverage .nyc_output",
    "postinstall": "npm run security:audit"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "comment-categorization",
    "proxy",
    "service-discovery",
    "load-balancing"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "axios": "^1.4.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "prom-client": "^14.2.0",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.41.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "lint-staged": "^13.2.2",
    "husky": "^8.0.3",
    "@types/jest": "^29.5.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "middleware/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "security/**/*.js",
      "config/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/comment-categorization-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/comment-categorization-gateway/issues"
  },
  "homepage": "https://github.com/your-org/comment-categorization-gateway#readme"
}