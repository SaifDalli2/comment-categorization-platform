# gateway-service/.env.example
# Server Configuration
PORT=3000
NODE_ENV=development

# Service URLs - Development
AUTH_SERVICE_URL=http://localhost:3001
COMMENT_SERVICE_URL=http://localhost:3002
INDUSTRY_SERVICE_URL=http://localhost:3003
NPS_SERVICE_URL=http://localhost:3004

# Legacy monolith support (for gradual migration)
MONOLITH_SERVICE_URL=http://localhost:5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=5000

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# Security
API_KEY_HEADER=x-api-key
JWT_SECRET=your-jwt-secret-key-here

# Static Files
STATIC_FILES_MAX_AGE=86400
ENABLE_COMPRESSION=true

# Load Balancing
ENABLE_LOAD_BALANCING=false
LOAD_BALANCE_STRATEGY=round_robin