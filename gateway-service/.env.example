# gateway-service/.env.example
# Server Configuration
PORT=3000
NODE_ENV=development

# Service URLs - Development
AUTH_SERVICE_URL=http://localhost:3001
COMMENT_SERVICE_URL=http://localhost:3002
INDUSTRY_SERVICE_URL=http://localhost:3003
NPS_SERVICE_URL=http://localhost:3004

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
API_KEY_HEADER=x-api-key
JWT_SECRET=your-jwt-secret-key-here

# Health Check
HEALTH_CHECK_INTERVAL=30000
SERVICE_TIMEOUT=5000

# Static Files
STATIC_FILES_MAX_AGE=86400
ENABLE_COMPRESSION=true

# Production Service URLs (Override in production)
# AUTH_SERVICE_URL=https://auth-service.yourdomain.com
# COMMENT_SERVICE_URL=https://comment-service.yourdomain.com
# INDUSTRY_SERVICE_URL=https://industry-service.yourdomain.com
# NPS_SERVICE_URL=https://nps-service.yourdomain.com