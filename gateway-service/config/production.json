{
  "server": {
    "enableRequestLogging": false
  },
  "security": {
    "jwtSecret": "CHANGE_THIS_IN_PRODUCTION_ENV_VAR",
    "sessionSecret": "CHANGE_THIS_IN_PRODUCTION_ENV_VAR",
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 100,
      "authMaxRequests": 5,
      "enableSlowDown": true
    },
    "cors": {
      "allowedOrigins": [
        "https://claude-analysis.com",
        "https://app.claude-analysis.com",
        "https://dashboard.claude-analysis.com"
      ]
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": {
        "enabled": true,
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'", "https://fonts.googleapis.com"],
          "scriptSrc": ["'self'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "connectSrc": ["'self'", "https://api.claude-analysis.com"],
          "fontSrc": ["'self'", "https://fonts.gstatic.com"],
          "objectSrc": ["'none'"],
          "mediaSrc": ["'self'"],
          "frameSrc": ["'none'"],
          "upgradeInsecureRequests": true
        }
      },
      "hsts": {
        "enabled": true,
        "maxAge": 31536000,
        "includeSubDomains": true,
        "preload": true
      }
    }
  },
  "services": {
    "discovery": {
      "healthCheckInterval": 30000,
      "healthCheckTimeout": 5000,
      "enableCircuitBreaker": true,
      "retryAttempts": 3
    },
    "registry": {
      "auth": {
        "urls": ["https://auth-service.claude-analysis.internal"],
        "timeout": 15000
      },
      "comment": {
        "urls": [
          "https://comment-service-1.claude-analysis.internal",
          "https://comment-service-2.claude-analysis.internal"
        ],
        "timeout": 45000
      },
      "industry": {
        "urls": ["https://industry-service.claude-analysis.internal"],
        "timeout": 10000
      },
      "nps": {
        "urls": [
          "https://nps-service-1.claude-analysis.internal",
          "https://nps-service-2.claude-analysis.internal"
        ],
        "timeout": 30000
      }
    }
  },
  "errorHandling": {
    "logLevel": "error",
    "enableStackTrace": false,
    "errorRateThresholds": {
      "warning": 0.02,
      "critical": 0.05
    },
    "notification": {
      "enabled": true,
      "webhookUrl": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "slackChannel": "#alerts-production",
      "emailRecipients": [
        "ops@claude-analysis.com",
        "dev-team@claude-analysis.com"
      ]
    }
  },
  "monitoring": {
    "enabled": true,
    "prometheus": {
      "enabled": true,
      "collectDefaultMetrics": true
    },
    "logging": {
      "level": "warn",
      "format": "json",
      "enableColors": false,
      "enableRotation": true
    },
    "tracing": {
      "enabled": true,
      "jaegerEndpoint": "https://jaeger.claude-analysis.internal",
      "sampleRate": 0.01
    }
  },
  "development": {
    "enableHotReload": false,
    "enableConfigWatch": false,
    "enableTestEndpoints": false,
    "enableSwaggerUI": false,
    "enableDebugLogs": false
  },
  "production": {
    "enableMetrics": true,
    "enableHealthChecks": true,
    "enableGracefulShutdown": true,
    "shutdownTimeout": 30000,
    "staticFilesCache": {
      "enabled": true,
      "maxAge": "1y",
      "etag": true
    },
    "clustering": {
      "enabled": true,
      "workers": 0
    }
  }
}