{
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "timeout": 30000,
    "keepAliveTimeout": 5000,
    "headersTimeout": 60000,
    "maxHeaderSize": 16384,
    "bodySizeLimit": "10mb",
    "enableCompression": true,
    "enableRequestLogging": true
  },
  "security": {
    "jwtSecret": "your-super-secret-jwt-key-change-this-in-production-must-be-at-least-32-chars",
    "jwtExpiresIn": "7d",
    "jwtIssuer": "claude-analysis-gateway",
    "sessionSecret": "your-super-secret-session-key-change-this-in-production-must-be-at-least-32-chars",
    "bcryptRounds": 12,
    "rateLimiting": {
      "enabled": true,
      "windowMs": 900000,
      "maxRequests": 100,
      "skipSuccessfulRequests": false,
      "skipFailedRequests": false,
      "authWindowMs": 900000,
      "authMaxRequests": 5,
      "enableSlowDown": true,
      "slowDownDelay": 500
    },
    "cors": {
      "enabled": true,
      "allowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001",
        "http://localhost:5173"
      ],
      "allowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ],
      "allowedHeaders": [
        "Content-Type",
        "Authorization",
        "X-Requested-With",
        "X-API-Key",
        "X-Request-ID",
        "X-User-Agent"
      ],
      "credentials": true,
      "maxAge": 86400,
      "optionsSuccessStatus": 204
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": {
        "enabled": true,
        "directives": {
          "defaultSrc": ["'self'"],
          "styleSrc": ["'self'", "'unsafe-inline'"],
          "scriptSrc": ["'self'"],
          "imgSrc": ["'self'", "data:", "https:"],
          "connectSrc": ["'self'"],
          "fontSrc": ["'self'"],
          "objectSrc": ["'none'"],
          "mediaSrc": ["'self'"],
          "frameSrc": ["'none'"]
        }
      },
      "hsts": {
        "enabled": true,
        "maxAge": 31536000,
        "includeSubDomains": true
      }
    }
  },
  "services": {
    "discovery": {
      "healthCheckInterval": 30000,
      "healthCheckTimeout": 5000,
      "unhealthyThreshold": 3,
      "healthyThreshold": 2,
      "enableCircuitBreaker": true,
      "circuitBreakerThreshold": 5,
      "circuitBreakerTimeout": 60000,
      "retryAttempts": 3,
      "retryDelay": 1000,
      "enableServiceMesh": false
    },
    "registry": {
      "auth": {
        "urls": ["http://localhost:3001"],
        "healthPath": "/health",
        "readyPath": "/ready",
        "timeout": 30000,
        "retries": 3,
        "metadata": {
          "description": "Authentication and user management service",
          "version": "1.0.0"
        },
        "authentication": {
          "type": "none"
        }
      },
      "comment": {
        "urls": ["http://localhost:3002"],
        "healthPath": "/health",
        "readyPath": "/ready",
        "timeout": 30000,
        "retries": 3,
        "metadata": {
          "description": "Comment processing and categorization service",
          "version": "1.0.0"
        },
        "authentication": {
          "type": "none"
        }
      },
      "industry": {
        "urls": ["http://localhost:3003"],
        "healthPath": "/health",
        "readyPath": "/ready",
        "timeout": 30000,
        "retries": 3,
        "metadata": {
          "description": "Industry configuration and categories service",
          "version": "1.0.0"
        },
        "authentication": {
          "type": "none"
        }
      },
      "nps": {
        "urls": ["http://localhost:3004"],
        "healthPath": "/health",
        "readyPath": "/ready",
        "timeout": 30000,
        "retries": 3,
        "metadata": {
          "description": "NPS analytics and dashboard service",
          "version": "1.0.0"
        },
        "authentication": {
          "type": "none"
        }
      }
    }
  },
  "errorHandling": {
    "enabled": true,
    "logLevel": "warn",
    "enableStackTrace": false,
    "errorRateThresholds": {
      "warning": 0.05,
      "critical": 0.15
    },
    "cleanup": {
      "interval": 300000,
      "maxAge": 1800000
    },
    "notification": {
      "enabled": false,
      "webhookUrl": "",
      "slackChannel": "",
      "emailRecipients": []
    }
  },
  "monitoring": {
    "enabled": true,
    "prometheus": {
      "enabled": true,
      "endpoint": "/metrics",
      "collectDefaultMetrics": true,
      "prefix": "gateway_"
    },
    "logging": {
      "level": "info",
      "format": "json",
      "enableColors": false,
      "enableTimestamp": true,
      "maxFileSize": "10MB",
      "maxFiles": 5,
      "enableRotation": true
    },
    "tracing": {
      "enabled": false,
      "jaegerEndpoint": "",
      "serviceName": "claude-analysis-gateway",
      "sampleRate": 0.1
    },
    "healthChecks": {
      "endpoint": "/health",
      "detailedEndpoint": "/health/detailed",
      "includeServices": true,
      "timeout": 5000
    }
  },
  "development": {
    "enableHotReload": true,
    "enableConfigWatch": true,
    "enableTestEndpoints": true,
    "enableSwaggerUI": true,
    "enableDebugLogs": true,
    "mockServices": {}
  },
  "production": {
    "enableMetrics": true,
    "enableHealthChecks": true,
    "enableGracefulShutdown": true,
    "shutdownTimeout": 30000,
    "staticFilesCache": {
      "enabled": true,
      "maxAge": "1d",
      "etag": true
    },
    "clustering": {
      "enabled": false,
      "workers": 4
    }
  }
}