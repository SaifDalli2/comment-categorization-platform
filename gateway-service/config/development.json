{
  "server": {
    "enableRequestLogging": true
  },
  "security": {
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 1000,
      "authMaxRequests": 20
    },
    "cors": {
      "allowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001",
        "http://localhost:5173",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:3001",
        "http://127.0.0.1:5173"
      ]
    },
    "helmet": {
      "contentSecurityPolicy": {
        "enabled": false
      }
    }
  },
  "services": {
    "discovery": {
      "healthCheckInterval": 15000,
      "retryAttempts": 1
    }
  },
  "errorHandling": {
    "logLevel": "debug",
    "enableStackTrace": true,
    "errorRateThresholds": {
      "warning": 0.1,
      "critical": 0.3
    }
  },
  "monitoring": {
    "logging": {
      "level": "debug",
      "enableColors": true
    },
    "tracing": {
      "enabled": false
    }
  },
  "development": {
    "enableHotReload": true,
    "enableConfigWatch": true,
    "enableTestEndpoints": true,
    "enableSwaggerUI": true,
    "enableDebugLogs": true,
    "mockServices": {
      "auth": {
        "enabled": false,
        "responses": {
          "/health": { "status": "healthy" },
          "/api/auth/verify": { "valid": true, "user": { "id": "dev-user", "email": "dev@example.com" } }
        },
        "delay": 100
      },
      "comment": {
        "enabled": false,
        "responses": {
          "/health": { "status": "healthy" },
          "/api/comments/categorize": { "jobId": "mock-job-123", "status": "queued" }
        },
        "delay": 500
      }
    }
  }
}